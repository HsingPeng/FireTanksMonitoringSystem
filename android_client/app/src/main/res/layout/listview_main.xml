<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_margin="12dp"
    android:background="@color/primary_color_green_dark"
    android:id="@+id/list_layout">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:layout_alignBottom="@+id/relativeLayout2"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/table_icon"
            android:scaleType="fitCenter"
            android:layout_above="@+id/t_ename"
            android:contentDescription="icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="一号水箱"
            android:id="@+id/t_ename"
            android:padding="2dp"
            android:layout_margin="2dp"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:textSize="19sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/relativeLayout"
        android:layout_toEndOf="@+id/relativeLayout"
        android:id="@+id/relativeLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="11℃"
            android:id="@+id/t_temp"
            android:layout_alignParentRight="true"
            android:padding="2dp"
            android:textColor="@android:color/white"
            android:textSize="35sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="水压正常"
            android:id="@+id/t_gage"
            android:layout_below="@+id/t_temp"
            android:layout_alignRight="@+id/t_temp"
            android:padding="2dp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="水位正常"
            android:id="@+id/t_level"
            android:layout_below="@+id/t_gage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="2dp"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</RelativeLayout>
