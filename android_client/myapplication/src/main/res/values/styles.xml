<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/AnimationActivity2</item>
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <!--第一次创建新Activity是调用的动画-->
        <item name="android:activityOpenEnterAnimation">@anim/in_right</item>
        <!--activity还没有finish()下退出效果-->
        <item name="android:activityOpenExitAnimation">@anim/out_left</item>
        <!--上一个activity返回进入效果-->
        <item name="android:activityCloseEnterAnimation">@anim/in_left</item>
        <!--调用finish关闭该Activity是调用的动画-->
        <item name="android:activityCloseExitAnimation">@anim/out_right</item>

    </style>

    <style name="AnimationActivity2" parent="@android:style/Animation.Activity">
        <!--第一次创建新Activity是调用的动画-->
        <item name="android:activityOpenEnterAnimation">@anim/in_bottom</item>
        <!--activity还没有finish()下退出效果-->
        <item name="android:activityOpenExitAnimation">@anim/out_center</item>
        <!--上一个activity返回进入效果-->
        <item name="android:activityCloseEnterAnimation">@anim/in_center</item>
        <!--调用finish关闭该Activity是调用的动画-->
        <item name="android:activityCloseExitAnimation">@anim/out_bottom</item>

    </style>

</resources>
